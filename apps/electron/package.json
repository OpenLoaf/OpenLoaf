{
  "name": "tenas",
  "productName": "Tenas",
  "version": "1.0.0",
  "description": "Tenas desktop app",
  "main": ".webpack/main",
  "build": {
    "appId": "com.hexems.tenas",
    "productName": "Tenas",
    "asar": true,
    "extraMetadata": {
      "main": ".webpack/arm64/main/index.js"
    },
    "files": [
      ".webpack/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/runtime.env",
        "to": "runtime.env"
      },
      {
        "from": "resources/speech",
        "to": "speech"
      },
      {
        "from": "resources/icon.icns",
        "to": "icon.icns"
      },
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "../../apps/server/dist/server.mjs",
        "to": "server.mjs"
      },
      {
        "from": "../../apps/server/dist/seed.db",
        "to": "seed.db"
      },
      {
        "from": "../../apps/web/out",
        "to": "out"
      },
      {
        "from": "../../node_modules/sharp",
        "to": "sharp",
        "filter": [
          "**/*",
          "!**/node_modules/.bin/**"
        ]
      },
      {
        "from": "../../node_modules/@img",
        "to": "@img"
      },
      {
        "from": "../../node_modules/node-pty/prebuilds",
        "to": "prebuilds"
      },
      {
        "from": "../../node_modules/@libsql",
        "to": "@libsql"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "语音输入需要访问麦克风。",
        "NSSpeechRecognitionUsageDescription": "语音输入需要使用系统语音识别。"
      }
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "linux": {
      "icon": "resources/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_OWNER",
        "repo": "YOUR_GITHUB_REPO"
      }
    ]
  },
  "scripts": {
    "predesktop": "node scripts/fixElectronInstall.mjs && pnpm run build:speech-helper",
    "desktop": "electron-forge start",
    "build:speech-helper": "node scripts/buildSpeechHelper.mjs",
    "package": "pnpm --filter server run build:prod && pnpm --filter web run build --webpack && electron-forge package",
    "package:noproxy": "pnpm --filter server run build:prod && pnpm --filter web run build --webpack && env -u http_proxy -u https_proxy -u HTTP_PROXY -u HTTPS_PROXY -u all_proxy -u ALL_PROXY -u no_proxy -u NO_PROXY electron-forge package",
    "make": "pnpm --filter server run build:prod && pnpm --filter web run build --webpack && electron-forge make",
    "make:noproxy": "pnpm --filter server run build:prod && pnpm --filter web run build --webpack && env -u http_proxy -u https_proxy -u HTTP_PROXY -u HTTPS_PROXY -u all_proxy -u ALL_PROXY -u no_proxy -u NO_PROXY electron-forge make",
    "build": "pnpm run package",
    "dist:builder": "pnpm run package && electron-builder",
    "dist:builder:publish": "pnpm run package && electron-builder --publish=always",
    "check-types": "pnpm -w exec tsc -p apps/electron/tsconfig.json --noEmit",
    "lint": "eslint src"
  },
  "keywords": [],
  "author": {
    "name": "zz@hexems.com",
    "email": "torykit@torykit.com"
  },
  "dependencies": {
    "@tenas-ai/config": "workspace:*",
    "electron-updater": "^6.7.3",
    "pino": "^10.3.0",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-webpack": "^7.11.1",
    "@electron-forge/shared-types": "^7.11.1",
    "electron": "40.0.0",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "catalog:"
  }
}
