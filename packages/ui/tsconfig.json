{
  "extends": "@openloaf/config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@openloaf/ui": ["./src"],
      "@openloaf/ui/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist/**", "node_modules/**"]
}
