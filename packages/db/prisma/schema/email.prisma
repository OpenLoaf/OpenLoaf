model EmailMessage {
  id           String   @id /// 记录 ID
  workspaceId  String /// 工作空间 ID
  accountEmail String /// 邮箱账号
  mailboxPath  String /// 邮件夹路径（IMAP mailbox 或 API folder ID）
  externalId   String /// 外部标识（IMAP UID 字符串化 或 API message ID）

  messageId    String? /// 邮件 Message-Id
  subject      String? /// 主题
  from         Json /// 发件人信息
  to           Json /// 收件人信息
  cc           Json? /// 抄送信息
  bcc          Json? /// 密送信息
  date         DateTime? /// 邮件时间
  flags        Json? /// IMAP flags 或统一标志
  snippet      String? /// 正文摘要

  bodyHtml     String? /// HTML 正文（已清洗）
  bodyHtmlRaw  String? /// 原始 HTML 正文（未清洗）
  bodyText     String? /// 纯文本正文
  attachments  Json? /// 附件元信息
  rawRfc822    String? /// 原始邮件内容

  size         Int? /// 邮件大小（字节）
  createdAt    DateTime @default(now()) /// 创建时间
  updatedAt    DateTime @updatedAt /// 更新时间

  @@unique([workspaceId, accountEmail, mailboxPath, externalId])
  @@index([workspaceId, accountEmail, date])
}

model EmailMailbox {
  id           String   @id /// 记录 ID
  workspaceId  String /// 工作空间 ID
  accountEmail String /// 邮箱账号
  path         String /// 邮件夹完整路径
  name         String /// 邮件夹显示名称
  parentPath   String? /// 父级路径
  delimiter    String? /// IMAP 分隔符
  attributes   Json? /// IMAP 属性
  sort         Int      @default(999) /// 排序值（越小越靠前）
  createdAt    DateTime @default(now()) /// 创建时间
  updatedAt    DateTime @updatedAt /// 更新时间

  @@unique([workspaceId, accountEmail, path])
  @@index([workspaceId, accountEmail, parentPath])
}

model EmailDraft {
  id           String   @id /// 草稿 ID
  workspaceId  String /// 工作空间 ID
  accountEmail String /// 发送账号
  mode         String /// 编辑模式：compose/reply/replyAll/forward
  to           String   @default("") /// 收件人（逗号分隔）
  cc           String   @default("") /// 抄送
  bcc          String   @default("") /// 密送
  subject      String   @default("") /// 主题
  body         String   @default("") /// 正文
  inReplyTo    String? /// 回复的 Message-Id
  references   Json? /// 引用链
  createdAt    DateTime @default(now()) /// 创建时间
  updatedAt    DateTime @updatedAt /// 更新时间

  @@index([workspaceId, accountEmail])
}
