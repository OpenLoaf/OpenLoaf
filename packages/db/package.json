{
  "name": "@tenas-ai/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    },
    "./prisma/generated/*": {
      "default": "./prisma/generated/*.ts"
    }
  },
  "scripts": {
    "db:push": "NODE_OPTIONS=--experimental-require-module prisma db push",
    "db:studio": "NODE_OPTIONS=--experimental-require-module prisma studio",
    "db:generate": "NODE_OPTIONS=--experimental-require-module DEBUG=prisma:* prisma generate",
    "db:migrate": "NODE_OPTIONS=--experimental-require-module prisma migrate dev",
    "db:seed": "pnpm db:generate && node --import tsx src/seed.ts",
    "check-types": "pnpm -w exec tsc -p packages/db/tsconfig.check.json",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@tenas-ai/config": "workspace:*",
    "prisma": "^7.3.0",
    "prisma-trpc-generator": "^3.0.1",
    "prisma-zod-generator": "^2.1.2",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/client": "catalog:",
    "dotenv": "catalog:",
    "zod": "^4.3.5"
  }
}
