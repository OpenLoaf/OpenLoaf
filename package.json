{
  "name": "tenas-ai",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "NODE_OPTIONS=--conditions=development turbo dev",
    "build": "turbo build",
    "check-types": "CI=1 turbo check-types",
    "dev:native": "NODE_OPTIONS=--conditions=development turbo -F native dev",
    "dev:web": "NODE_OPTIONS=--conditions=development turbo -F web dev",
    "dev:server": "NODE_OPTIONS=--conditions=development turbo -F server dev",
    "desktop": "NODE_OPTIONS=--conditions=development pnpm --filter tenas desktop",
    "db:push": "turbo -F @tenas-ai/db db:push",
    "db:studio": "turbo -F @tenas-ai/db db:studio",
    "db:generate": "turbo -F @tenas-ai/db db:generate",
    "db:migrate": "turbo -F @tenas-ai/db db:migrate",
    "db:seed": "turbo -F @tenas-ai/db db:seed",
    "lint": "turbo lint",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --fix .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check ."
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "simplebar-react": "^3.3.2",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^25.0.3",
    "biome": "^0.3.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.6.2",
    "tailwindcss": "^4.1.10",
    "turbo": "^2.7.1",
    "typescript": "catalog:",
    "typescript-eslint": "^8.50.0"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "biome check --apply --write"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {}
  }
}
