{
  "name": "openloaf",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "cross-env CI=1 NODE_OPTIONS=--conditions=development turbo dev --ui=stream",
    "build": "turbo build",
    "check-types": "CI=1 turbo check-types",
    "dev:native": "cross-env CI=1 NODE_OPTIONS=--conditions=development turbo -F native dev --ui=stream",
    "dev:web": "cross-env CI=1 NODE_OPTIONS=--conditions=development turbo -F web dev --ui=stream",
    "dev:server": "cross-env CI=1 NODE_OPTIONS=--conditions=development turbo -F server dev --ui=stream",
    "desktop": "cross-env NODE_OPTIONS=--conditions=development pnpm --filter desktop desktop",
    "db:push": "turbo -F @openloaf/db db:push",
    "db:studio": "turbo -F @openloaf/db db:studio",
    "db:generate": "turbo -F @openloaf/db db:generate",
    "db:migrate": "turbo -F @openloaf/db db:migrate",
    "db:seed": "turbo -F @openloaf/db db:seed",
    "refresh:sdk": "rm -rf node_modules/@openloaf-saas/sdk node_modules/.pnpm/@openloaf-saas+sdk* && pnpm install --filter web --force",
    "lint": "turbo lint",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --fix .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "publish:server": "pnpm --filter server run publish-update",
    "publish:web": "pnpm --filter web run publish-update",
    "clean": "pnpm -r exec rm -rf node_modules dist .turbo .next out build && rm -rf node_modules .turbo"
  },
  "dependencies": {
    "@ark-ui/react": "^5.31.0",
    "dotenv": "^17.2.3",
    "simplebar-react": "^3.3.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/cli": "^4.1.18",
    "@openloaf/api": "workspace:*",
    "@openloaf/config": "workspace:*",
    "@openloaf/db": "workspace:*",
    "@types/node": "^25.0.10",
    "biome": "^0.3.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.7.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.5",
    "typescript": "catalog:",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "biome check --apply --write"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^19.0.0"
      }
    },
    "overrides": {
      "@radix-ui/react-popover": "1.1.15",
      "@radix-ui/react-tabs": "1.1.13"
    },
    "onlyBuiltDependencies": [
      "macos-alias",
      "ds-store",
      "appdmg",
      "fs-xattr"
    ],
    "supportedArchitectures": {
      "os": [
        "darwin",
        "win32",
        "linux"
      ],
      "cpu": [
        "arm64",
        "x64"
      ],
      "libc": [
        "glibc"
      ]
    }
  },
  "packageManager": "pnpm@10.27.0"
}
